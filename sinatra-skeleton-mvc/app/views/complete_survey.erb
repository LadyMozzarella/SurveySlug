<h1><%= @survey.name%></h1>
<form>
  <% @survey.questions.each do |question| %>
    <li>
      <div>
        <h3><%= question.prompt %></h3>
        <ul>
          <% question.options.each do |option| %>
            <label for="option" data-id="<%= option.id %>"><%= option.name %>
            <input type="radio" name="option" value="<%= option.name %>"></label>
          <% end %>
        </ul>
      </div>
    </li>
    <p id="demo"></p><%# added this for a test %>
  <% end %>
  <button id="submit_response">Submit Survey</button>
</form>